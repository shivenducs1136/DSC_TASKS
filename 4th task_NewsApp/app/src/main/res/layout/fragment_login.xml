<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout="@layout/fragment_login"
    tools:context=".MainFragment"

    >
    <data>

        <variable
            name="logindetails"
            type="com.example.newsapp.ui.AuthViewModel" />

    </data>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#ffffff"
       >
<ImageView
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:src="@drawable/ic_undraw_login_re_4vu2"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:id="@+id/ils1"
    />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="LOGIN"
           android:textSize="40sp"
           android:textColor="#1232FF"
           android:layout_below="@+id/ils1"
           android:layout_centerHorizontal="true"
           android:fontFamily="@font/amaranth"
           />


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:layout_marginLeft="20sp"
           android:background="@drawable/card_view_blue"
           android:id="@+id/card_white_trans"
           android:paddingBottom="30sp"

           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_marginLeft="50sp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="40sp"
               android:id="@+id/inputarea"
               >
               <EditText
                   android:id="@+id/editTextTextEmailAddress"
                    android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                   android:textColorHint="#801A02F4"
                   android:text="@={logindetails.email}"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:ems="10" android:background="@drawable/card_view_blue"
                   android:inputType="textEmailAddress"
                   android:hint="example@gmail.com"
                   android:drawablePadding="20dp"

                   />

               <EditText
                   android:id="@+id/editTextTextPassword"
                   android:layout_width="match_parent"
                   android:drawableLeft="@drawable/ic_baseline_lock_24"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:textColorHint="#801A02F4"
                   android:drawablePadding="20dp"
                   android:background="@drawable/card_view_blue"
                   android:padding="10sp"
                   android:text="@={logindetails.password}"
                   android:inputType="textPassword"
                   android:layout_marginTop="20dp"
                   android:hint="***123 "
                   />

           </LinearLayout>

           <RelativeLayout
               android:layout_width="150sp"
               android:layout_marginTop="20sp"
               android:layout_height="40sp"
               android:background="@drawable/card_view_blue"
               android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
               android:id="@+id/loginbtn"
               android:layout_below="@+id/inputarea"
               android:onClick="@{logindetails::onLoginButtonClick}"
               android:elevation="4dp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="LOGIN"
                   android:textSize="25sp"

                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:textColor="#1232FF"
                   android:fontFamily="sans-serif-black"
                   />

           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_below="@id/loginbtn"
               android:id="@+id/regtxt"
               android:layout_marginTop="15sp"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Not have account? Register here. "
                   android:id="@+id/reg"
                   />

           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_below="@+id/regtxt"
               android:layout_marginTop="10sp"
               android:elevation="4dp"

               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" Register "
                   android:id="@+id/Registerbtn"
                   android:textStyle="bold"
                   android:textColor="#F43333"
                   android:textSize="20sp"
                   android:padding="5dp"
                   />

           </RelativeLayout>

       </RelativeLayout>

       </RelativeLayout>

</layout>
