<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout="@layout/fragment_register"
    tools:context=".RegisterFragment"

    >
    <data>

        <variable
            name="registerdetails"
            type="com.example.newsapp.ui.RegAuthViewModel" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_undraw_mobile_payments_vftl"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/ils1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:background="@drawable/card_view_blue"
        android:id="@+id/card_white_trans"
        android:paddingBottom="30sp"

        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"
        android:id="@+id/inputarea2"
        android:orientation="vertical"

            >
        <EditText
            android:id="@+id/nametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="20dp"
            android:inputType="textPersonName"
            android:hint="Joe Biden"
            />
        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_alternate_email_24"

            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:inputType="textEmailAddress"
            android:hint="example@gmail.com"
            />

        <EditText

            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="***123"
            />
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"

            android:hint="***123"
            />
        <EditText


            android:id="@+id/age"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_accessibility_new_24"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your age"
            android:inputType="number"

            />
        <EditText

            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_10mp_24"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="+91 123456789"
            android:ems="10"
            android:inputType="phone"

            />
        <EditText

            android:id="@+id/PostalAddress"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="I live in"

            />

        <EditText

            android:id="@+id/bioedttxt"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_handyman_24"
            android:background="@drawable/card_view"
            android:padding="6sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Pair of word for you"

            />
        </LinearLayout>


        <RelativeLayout
        android:layout_width="150sp"
        android:layout_marginTop="20sp"
        android:layout_height="40sp"
        android:background="@drawable/card_view_blue"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/loginbtn"
        android:layout_below="@+id/inputarea2"
        android:onClick="@{registerdetails::onRegisterButtonClick}"
        android:elevation="4dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textSize="25sp"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#1232FF"
            android:fontFamily="sans-serif-black"
            />

    </RelativeLayout>


    </RelativeLayout>
    </RelativeLayout>

</layout>
